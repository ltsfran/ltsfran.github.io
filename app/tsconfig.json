{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "outDir": "/dist",
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./client",
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["*"]
    },
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}
